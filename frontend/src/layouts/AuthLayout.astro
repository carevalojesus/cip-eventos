---
import '../styles/global.css'

interface Props {
  title: string
  lang?: 'es' | 'en'
}

const { title, lang = 'es' } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="CIP Eventos - Sistema de gestión de eventos del Colegio de Ingenieros del Perú" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script define:vars={{ lang }}>
      localStorage.setItem('i18nextLng', lang);
    </script>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <script>
      import '../i18n';
    </script>
  </body>
</html>

<style>
  main {
    min-height: 100vh;
  }
</style>
