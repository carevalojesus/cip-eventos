---
import '../styles/global.css'

interface Props {
  title: string
  lang?: 'es' | 'en'
}

const { title, lang = 'es' } = Astro.props

const skipLinkText = {
  es: 'Saltar al contenido principal',
  en: 'Skip to main content'
}
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="CIP Eventos - Sistema de gestión de eventos del Colegio de Ingenieros del Perú" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script define:vars={{ lang }}>
      localStorage.setItem('i18nextLng', lang);
    </script>
    <script>
      import '../i18n';
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">
      {skipLinkText[lang]}
    </a>
    <main id="main-content">
      <slot />
    </main>
  </body>
</html>

<style>
  main {
    min-height: 100vh;
  }

  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: #000;
    color: #fff;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    z-index: 9999;
    transition: top 0.2s ease-in-out;
  }

  .skip-link:focus {
    top: 0;
    outline: 3px solid #4f46e5;
    outline-offset: 2px;
  }
</style>
