---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="CIP Eventos" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script>
            // Actualizar atributo lang del HTML seg√∫n localStorage
            const savedLang = localStorage.getItem('i18nextLng') || 'es';
            document.documentElement.lang = savedLang;
        </script>
    </head>
    <body>
        <slot />
        <script>
            // Inicializar i18next para componentes React
            import '../i18n';
        </script>
    </body>
</html>
