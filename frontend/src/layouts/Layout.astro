---
import "../styles/global.css";

interface Props {
    title: string;
    lang?: 'es' | 'en';
}

const { title, lang = 'es' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="CIP Eventos - Sistema de gestión de eventos del Colegio de Ingenieros del Perú" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script define:vars={{ lang }}>
            // Sincronizar idioma con localStorage e i18next
            localStorage.setItem('i18nextLng', lang);
        </script>
    </head>
    <body>
        <slot />
        <script>
            // Inicializar i18next para componentes React
            import '../i18n';
        </script>
    </body>
</html>
